{
  "compilerOptions": {
    "target": "es2022",                                      
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,                
    "strict": true,                                          
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./bin"
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules", "bin", "test", "sample"]
}
