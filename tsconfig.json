{
  "compilerOptions": {
    "target": "es2022",                                      
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,                
    "strict": true,                                          
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist", "test"]
}
